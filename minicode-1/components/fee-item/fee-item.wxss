/* components/fee-item/fee-item.wxss */
.fee-item {
    width: 100%; /* 占满父容器.fee-list的宽度 */
    height:180rpx;
    display: flex;
    flex-direction: column;
    gap: 20rpx;
    padding: 20rpx;
    margin: 10rpx 0; /* 项之间的间距 */
    border-radius: 12rpx;
    border-left: 8rpx solid;
    background: #fff;
    box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.08);
  }
  
  .fee-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  
  .fee-icon {
    width: 80rpx;
    height: 80rpx;
    margin-right: 16rpx;
  }
  
  .fee-info {
    flex: 1; /* 占满中间空间 */
  }
  
  .fee-name {
    font-weight: 500;
  }
  
  .fee-tag {
    color: #999;
    margin-left: 10rpx;
  }
  .fee-amount {
    color: #f43f3b; /* 金额统一红色 */
    font-weight: bold;
    justify-self:end;
  }
  .pay-btn {
    width: 100%;
    height: 72rpx;
    line-height: 72rpx;
    color: #fff;
    font-size: 28rpx;
    border-radius: 8rpx;
    /* 按钮背景色由外部传入 */
    text-align: center;
  }
  
  /* 新增：弹窗样式 */
  .modal-mask {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.3);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 9999;
  }
  
  .modal-content {
    width: 60%;
    padding: 40rpx 20rpx;
    background-color: #fff;
    border-radius: 12rpx;
    text-align: center;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  }
  
  .modal-text {
    font-size: 32rpx;
    font-weight: bold;
    color: #4CAF50;
    display: block;
    margin-bottom: 10rpx;
  }
  
  .modal-subtext {
    font-size: 24rpx;
    color: #666;
  }
  
  /* 新增：已缴费提示 */
  .paid-tip {
    width: 100%;
    height: 72rpx;
    line-height: 72rpx;
    color: #4CAF50;
    text-align: center;
    border: 1rpx solid #4CAF50;
    border-radius: 8rpx;
  }