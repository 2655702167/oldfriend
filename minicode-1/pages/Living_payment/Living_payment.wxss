/* pages/Living_payment/Living_payment.wxss */
.page-container{
    height: 60rpx;
}
.nav-bar{
    height:140rpx;
    background-color:#52c41a;
    display: flex;
    align-items: center;
}

/* 滚动容器 */
.payment-scroll {
    height: calc(100vh - 200rpx);
    background-color: #f5f5f5;
}

.Left_arrow{
    width:40rpx;
}

/* 语音输入栏 */
.voice-bar {
  background: linear-gradient(135deg, #52c41a 0%, #73d13d 100%);
  border-radius: 50rpx;
  padding: 40rpx 80rpx;
  margin: 30rpx 8%;
  box-shadow: 0 6rpx 20rpx rgba(82, 196, 26, 0.3);
  display: flex;
  justify-content: center;
  align-items: center;
}

.voice-bar:active {
  transform: translateY(4rpx);
  box-shadow: 0 2rpx 10rpx rgba(82, 196, 26, 0.3);
}

.voice-bar.recording {
  background: linear-gradient(135deg, #ff4d4f 0%, #ff7875 100%);
  animation: pulse 1s infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.7; }
}

.voice-icon {
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}

/* 缴费列表 */
.fee-list{
  width: 86%; 
  margin: 20rpx 7%;
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.fee-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
}

.fee-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.fee-icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}

.fee-name {
  font-weight: bold;
}

.fee-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.fee-amount {
  font-weight: bold;
}

.fee-btn {
  width: 100%;
  height: 80rpx;
  border-radius: 15rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
