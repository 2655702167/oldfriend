page {
  height: 100%;
  overflow: hidden;
}

.page-wrap {
  height: 100vh;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  background-color: #f5f5f5;
}

.nav-bar{
    height:140rpx;
    /* width: 100%; */
    display: flex;
    background-color:#FF902D ;
    align-items: center;
    flex-shrink: 0;
}



/* 对话容器（核心：高度自适应，必加） */
.chat-container {
    flex: 1;
    height: 0;
    width: 100%;
    padding: 20rpx;
    background-color: #f9f9f9;
    box-sizing: border-box;
  }
  
  /* 对话列表 */
  .chat-list {
    display: flex;
    flex-direction: column;
    gap: 30rpx;
  }
  
  /* 通用消息项 */
  .chat-item {
    display: flex;
    align-items: flex-start;
    width: 100%;
  }
  
  /* AI消息：头像左 */
  .ai-chat {
    justify-content: flex-start;
    gap: 15rpx;
  }
  
  /* 自己消息：头像最右 */
  .self-chat {
    justify-content: flex-end;
    gap: 15rpx;
  }
  
  /* 头像（固定大小，不压缩） */
  .avatar {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    flex-shrink: 0;
  }
  
  /* 消息气泡容器（限制宽度） */
  .message-wrapper {
    max-width: 70%;
    flex-shrink: 0;
  }
  
  /* 消息气泡 */
  .message {
    padding: 15rpx 20rpx;
    border-radius: 18rpx;
    word-break: break-all;
  }
  
  /* AI气泡样式 */
  .ai-message {
    background-color: #ffffff;
    border: 1rpx solid #eee;
    border-bottom-left-radius: 6rpx;
  }
  
  /* 自己气泡样式 */
  .self-message {
    background-color: #7B61FF;
    color: #ffffff;
    border-bottom-right-radius: 6rpx;
  }
  
  /* 时间戳 */
  .time {
    color: #999;
    margin-top: 8rpx;
    text-align: right;
  }
  .self-message .time {
    color: #e0e0e0;
  }




  /* 输入区域整体样式 */
  .input-area {
    flex-shrink: 0;
    padding: 10rpx 20rpx 5rpx;
    background-color: #fff;
    border-top: 1rpx solid #eee;
    padding-bottom: calc(5rpx + env(safe-area-inset-bottom));
  }
  
  /* 文本输入框 */
  .text-input {
    width: 100%;
    height: 80rpx;
    border: 1rpx solid #eee;
    border-radius: 30rpx;
    padding: 0 20rpx;
    margin-bottom: 10rpx;
    box-sizing: border-box;
  }
  
  /* 按钮行容器（核心：同行排列） */
  .btn-row {
    display: flex;
    gap: 10rpx; /* 按钮间距 */
    margin-bottom: 5rpx;
  }
  .voice-btn {
    flex: 4; /* 80%占比（4/(4+1)） */
    height: 66rpx;
    line-height: 66rpx;
    background-color: #FF7D00;
    color: #fff;
    border-radius: 35rpx;
    padding: 0;
  }
  /* 发送按钮 */
  .send-btn {
    flex: 1; /* 20%占比（1/(4+1)） */
    height: 66rpx;
    line-height: 66rpx;
    background-color: #7B61FF;
    color: #fff;
    border-radius: 30rpx;
    padding: 0;
  }
   
  /* 功能按钮容器 */
  .func-btns {
    display: flex;
    gap: 15rpx;
    margin-bottom: 5rpx; /* 彻底消除底部多余间距 */
  }
  
  /* 功能按钮样式 */
  .func-btn {
    flex: 1;
    height: 60rpx;
    line-height: 60rpx;
    background-color: #f5f5f5;
    color: #333;
    border-radius: 30rpx;
    padding: 0;
  }
  
  /* 录音中弹窗 */
  .record-modal {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 200rpx;
    height: 200rpx;
    background-color: rgba(0, 0, 0, 0.7);
    border-radius: 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    color: #fff;
    z-index: 999; /* 确保在最上层 */
  }
  
  .record-icon {
    font-size: 60rpx;
    margin-bottom: 20rpx;
  }
  
  .record-text {
    font-size: 28rpx;
  }