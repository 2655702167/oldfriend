.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center; /* 垂直居中 */
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 30rpx;
  box-sizing: border-box;
}

.info-card {
  width: 100%;
  background-color: white;
  border-radius: 30rpx;
  padding: 50rpx 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.1);
  display: flex;
  flex-direction: column;
}

.card-header {
  text-align: center;
  margin-bottom: 60rpx;
}

.title {
  font-weight: bold;
  color: #333;
  font-size: 48rpx !important; /* 强制大标题 */
}

.info-list {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.info-item {
  margin-bottom: 50rpx;
}

.label {
  color: #666;
  margin-bottom: 20rpx;
  display: block;
  font-size: 32rpx;
}

.value-box {
  background-color: #f9f9f9;
  padding: 30rpx;
  border-radius: 15rpx;
}

.input, .value {
  font-size: 36rpx;
  width: 100%;
  height: 100%;
  color: #333;
}

.action-btn {
  margin-top: 60rpx;
  width: 100% !important;
  padding: 25rpx 0;
  background-color: #4A90E2;
  color: white;
  border-radius: 50rpx;
  font-weight: bold;
  box-shadow: 0 6rpx 15rpx rgba(74, 144, 226, 0.3);
}
