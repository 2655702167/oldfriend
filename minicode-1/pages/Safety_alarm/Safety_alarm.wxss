/* pages/Safety_alarm/Safety_alarm.wxss */
/* 最外层容器：全屏 + 线性渐变背景 */
.page-container {
    /* 核心：顶部红色(#ff5252)到底部浅粉色(#fff0f0)的渐变 */
    background: linear-gradient(to bottom, #ff5252, #fff0f0);
    min-height: 100vh; /* 铺满整个屏幕高度 */
    padding: 30rpx;
    box-sizing: border-box;
  }
  
  /* 可滚动区域，高度扣除底部状态栏 */
  .page-scroll {
    height: calc(100vh - 100rpx);
    box-sizing: border-box;
  }
  
  /* 顶部标题 */
  .top-title {
    color: white;
    text-align: center;
    margin-top: 60rpx;
    margin-bottom: 30rpx;
    font-weight: bold;
  }
  
  /* 警告图标 */
  .warning-icon {
    width: 160rpx;
    height: 160rpx;
    background-color: white;
    border-radius: 50%;
    margin: 30rpx auto 20rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 80rpx;
    box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.1);
  }
  
  /* 安全提醒文字 */
  .remind-title {
    text-align: center;
    font-weight: bold;
    margin-bottom: 15rpx;
  }
  .remind-content {
    text-align: center;
    color: #FFE4E4;
    margin-bottom: 50rpx;
  }

  /* 安全录像区域 */
  .record-section {
    background-color: #ffecec;
    border-radius: 15rpx;
    padding: 20rpx;
    margin-bottom: 30rpx;
  }
  .record-header {
    display: flex;
    align-items: center;
    margin-bottom: 10rpx;
  }
  .record-dot {
    color: #e53935;
    font-size: 28rpx;
    margin-right: 10rpx;
  }
  .record-text {
    color: #333;
  }
  .record-camera {
    width: 100%;
    height: 260rpx;
    border-radius: 12rpx;
    overflow: hidden;
    background-color: #000;
  }
  .record-control {
    margin-top: 24rpx;
    background-color: #e53935;
    color: #fff;
    text-align: center;
    padding: 26rpx 0;
    border-radius: 10rpx;
    font-size: 34rpx;
    font-weight: bold;
  }
  
/* 当前位置信息 */
.location-info {
  background-color: white;
  border-radius: 15rpx;
  padding: 25rpx;
  margin-bottom: 25rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}
.location-label {
  font-weight: bold;
  color: #333;
  margin-right: 10rpx;
}
.location-text {
  color: #666;
  flex: 1;
}

/* 处理列表 */
.handle-list {
  background-color: white;
  border-radius: 15rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}
.list-item {
  margin-bottom: 25rpx;
  display: flex;
  align-items: center;
}
.list-item:last-child {
  margin-bottom: 0;
}  /* 建议操作 */
  .suggestion {
    background-color: #fff8e1;
    border-radius: 15rpx;
    padding: 25rpx;
    margin-bottom: 40rpx;
  }
  .suggestion-title {
    font-weight: bold;
    margin-bottom: 20rpx;
  }
  .suggestion-item {
    margin-bottom: 15rpx;
  }
  
  /* 按钮区域 */
  .btn-group {
    margin-bottom: 60rpx;
  }
  .call-110 {
    background-color: #e53935;
    color: white;
    text-align: center;
    padding: 25rpx 0;
    border-radius: 10rpx;
    font-weight: bold;
    margin-bottom: 25rpx;
    box-shadow: 0 2rpx 5rpx rgba(229,57,53,0.3);
  }
  .btn-row {
    display: flex;
    gap: 20rpx;
  }
  .btn {
    flex: 1;
    text-align: center;
    padding: 25rpx 0;
    border-radius: 10rpx;
    font-size: 28rpx;
  }
  .wrong-trigger {
    background-color: white;
    border: 1rpx solid #ddd;
  }
  .resolved {
    background-color: #4caf50;
    color: white;
  }
  
  /* 底部状态栏 */
  .bottom-status {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: #4caf50;
    color: white;
    padding: 15rpx 0;
  }