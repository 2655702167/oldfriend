/* profile.wxss */
.profile-container {
    background-color: #f5f5f5;
    height: calc(100vh - 200rpx);
    padding: 20rpx;
    box-sizing: border-box;
  }
  
 /* 用户信息卡片样式 */
.user-card {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border-radius: 20rpx;
    padding: 40rpx 30rpx;
    display: flex;
    align-items: center;
    margin-bottom: 30rpx;
    box-shadow: 0 6rpx 20rpx rgba(102, 126, 234, 0.3);
  }
  
  .user-avatar {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    background-color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 30rpx;
    overflow: hidden;
  }
  
  .avatar-button {
    padding: 0;
    margin: 0;
    background: transparent;
    border: none;
    border-radius: 50%;
    width: 120rpx;
    height: 120rpx;
    overflow: hidden;
  }
  
  .avatar-button::after {
    border: none;
  }
  
  .avatar-img {
    width: 100%;
    height: 100%;
    border-radius: 50%;
  }
  
  .user-info {
    display: flex;
    flex-direction: column;
    flex: 1;
    justify-content: center;
  }
  
  .user-name {
    font-size: 40rpx;
    font-weight: bold;
    color: white;
    margin-bottom: 10rpx;
  }
  
  .user-phone {
    font-size: 28rpx;
    color: rgba(255, 255, 255, 0.8);
  }

  /* 登录区域样式 */
  .login-section {
    padding: 40rpx 30rpx;
    background-color: white;
    margin-bottom: 20rpx;
    border-radius: 20rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .wechat-login-btn {
    width: 100% !important;
    background-color: #07c160; /* 微信绿 */
    color: white;
    font-size: 32rpx;
    font-weight: bold;
    padding: 25rpx 0;
    border-radius: 10rpx;
    margin-bottom: 30rpx;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .wechat-login-btn:active {
    opacity: 0.9;
  }

  .manual-login-link {
    font-size: 28rpx;
    color: #666;
    text-decoration: underline; /* 可选：下划线 */
    padding: 10rpx 20rpx;
  }

  /* 功能列表样式 */
  .function-list {
    border-radius: 20rpx;
    overflow: hidden;
  }
  
  .list-group {
    background: white;
    margin-bottom: 20rpx;
    border-radius: 20rpx;
    overflow: hidden;
    box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.05);
  }
  
  .list-group:last-child {
    margin-bottom: 0;
  }
  
  .list-item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 30rpx;
    border-bottom: 1rpx solid #f0f0f0;
    position: relative;
  }
  
  .list-item:last-child {
    border-bottom: none;
  }
  
  .list-item:active {
    background-color: #f9f9f9;
  }
  
  .item-text {
    color: #333;
  }
  
  .arrow-icon {
    width: 30rpx;
    height: 30rpx;
  }
  